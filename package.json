{
  "name": "stick-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev -- vite dev",
    "build": "vite build",
    "cf": "wrangler pages dev build",
    "preview": "vite preview",
    "test": "ava src/**/*.test.ts",
    "test:e2e": "playwright test",
    "report:e2e": "playwright show-report",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint './src/**/*.{js,ts,svelte}'",
    "format": "prettier --write --plugin-search-dir=. .",
    "deploy": "vite build && wrangler pages publish build"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230307.0",
    "@miniflare/tre": "3.0.0-next.12",
    "@playwright/test": "^1.29.2",
    "@sveltejs/adapter-cloudflare": "^2.2.0",
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/kit": "^1.0.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/qrcode-svg": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.13",
    "ava": "^4.3.1",
    "daisyui": "^2.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "events": "^3.3.0",
    "one-webcrypto": "^1.0.1",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.34.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "svelte-seo": "^1.2.1",
    "tailwindcss": "^3.2.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tslib": "^2.0.0",
    "typescript": "^4.4.4",
    "vite": "^4.0.0",
    "wrangler": "^2.12.3"
  },
  "type": "module",
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "nodeArguments": [
      "--loader=./tsnode-loader.js"
    ]
  },
  "dependencies": {
    "@wellcaffeinated/view-draw": "^0.0.4",
    "clipboard-copy": "^4.0.1",
    "csv-parse": "^5.3.6",
    "qrcode-svg": "^1.1.0",
    "streaming-iterables": "^7.1.0",
    "uint8arrays": "^4.0.2",
    "uuid": "^9.0.0",
    "webnative": "^0.36.0"
  },
  "engines": {
    "node": ">=16.14"
  }
}
